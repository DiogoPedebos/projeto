generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Metadados {
  id                    Int      @id @default(autoincrement())
  modelrunUpdatetimeUtc DateTime
  nome                  String?
  altura                Int?
  abreviacaoFusoHorario String?
  latitude              Float?
  modelrunUtc           DateTime
  longitude             Float?
  offsetHorarioUtc      Float?
  tempoGeracaoMs        Float?
}

model Unidades {
  id                          Int     @id @default(autoincrement())
  previsibilidade             String?
  precipitacao                String?
  velocidadeDoVento           String?
  probabilidadeDePrecipitacao String?
  umidadeRelativa             String?
  tempo                       String?
  temperatura                 String?
  pressao                     String?
  direcaoDoVento              String?
}

model DadosAtuais {
  id                 Int      @id @default(autoincrement())
  tempo              DateTime
  dadosObservados    Boolean?
  metarid            String?
  ehDia              Boolean?
  velocidadeDoVento  Float?
  anguloDeZenite     Float?
  pictocodeDetalhado Int?
  pictocode          Int?
  temperatura        Float?
}

model DadosDiarios {
  id                          Int      @id @default(autoincrement())
  tempo                       DateTime
  temperaturaInstantanea      Float?
  precipitacao                Float?
  previsibilidade             Int?
  temperaturaMaxima           Float?
  pressaoMediaNivelDoMar      Float?
  velocidadeDoVentoMedia      Float?
  horasDePrecipitacao         Float?
  pressaoMinimaNivelDoMar     Float?
  pictocode                   Int?
  fracaoDeNeve                Float?
  horasComUmidadeMaior90      Float?
  precipitacaoConvectiva      Float?
  umidadeRelativaMaxima       Int?
  temperaturaMinima           Float?
  direcaoDoVento              Int?
  temperaturaSensacaoMaxima   Float?
  umidadeRelativaMinima       Int?
  temperaturaSensacaoMedia    Float?
  velocidadeDoVentoMinima     Float?
  temperaturaSensacaoMinima   Float?
  probabilidadeDePrecipitacao Float?
  indiceUv                    Int?
  manchasDeChuva              String?
  temperaturaMedia            Float?
  pressaoMaximaNivelDoMar     Float?
  umidadeRelativaMedia        Int?
  classeDePrevisibilidade     Float?
  velocidadeDoVentoMaxima     Float?
}
